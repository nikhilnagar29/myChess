<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/Style/game.css">
    <title>Document</title>
</head>
<body class="bg-gradient-to-br flex items-center from-gray-800 via-gray-900 to-black text-white flex justify-center items-start min-h-screen">
    <div id="overlay"></div>
    <div id="popup">
        <p id="popup-message"></p>
        <button onclick="closePopup()">OK</button>
    </div>

    
    <div class="w-full h-[500px] flex items-center justify-center bg-gray-900 max-w-5xl p-8 shadow-2xl rounded-2xl animate-fade-in relative overflow-hidden">
        <!-- Chat Toggle Button -->
        <button id="chatToggleButton" 
            class="absolute top-4 right-4 bg-blue-600 text-white px-4 py-2 rounded-full shadow-lg hover:bg-blue-700 transition-all duration-300">
            Chat
        </button>
    
        <!-- Chessboard -->
        <div id="chessBoard" class="">
            <h3 class="mt-[100px] ml-[70px]">Wait for another player</h3>
        </div>
    
        <!-- Chat Area -->
        <div id="chatArea" class="absolute top-0 right-[-100%] h-full w-1/3 bg-gray-800 bg-opacity-70 text-inherit shadow-md rounded-md p-4 transform transition-transform duration-500 ease-in-out">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-bold text-blue-400">Chat</h3>
                <button id="closeChatButton" 
                    class="bg-red-600 text-white px-2 py-1 rounded-md shadow-md hover:bg-red-700 transition-all duration-300">
                    Ã—
                </button>
            </div>
            
            <div class="chat-container" id="chat-display" style="height: calc(100% - 150px); overflow-y: auto;">
                <!-- Chat messages will be dynamically added here -->
            </div>
    
            <!-- Message Input -->
            <form id="message-form" class="input-area">
                <div class="relative">
                    <textarea id="message" 
                        class="w-full p-4 bg-gray-800 text-white border border-blue-600 rounded-lg placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all ease-in-out duration-200 resize-none" 
                        placeholder="Type your message here..." rows="3" required></textarea>
                    <button type="submit" 
                        class="absolute right-2 mb-1 bottom-2 bg-blue-600 text-white font-semibold rounded-full px-4 py-2 shadow-lg hover:bg-blue-700 active:bg-blue-800 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50">
                        Send
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    
    
    
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js" 
    integrity="sha512-xRllwz2gdZciIB+AkEbeq+gVhX8VB8XsfqeFbUh+SzHlN96dEduwtTuVuc2u9EROlmW9+yhRlxjif66ORpsgVA==" 
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/javaScript/game.js"></script>
</html>